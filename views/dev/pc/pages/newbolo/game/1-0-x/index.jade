    include ../../_include/base-dependencies
    link(rel='stylesheet', href='/dev/styles/pc/pages/newbolo/game/1-0-x/index.css')
    script.
        var VIDEO_INFO = !{JSON.stringify(videoInfo)};
        var CHANNEL_INFO = !{JSON.stringify(channelInfo)};
        var DANMAKU = !{JSON.stringify(danmaku)};
block content
    include ../../components/side-bar/1-0-x/index
    .header
        include ../../components/header/1-0-x/index
        .cover
        .modal
    .wrapper
        .banner
            .game-name #{name}
            .main
                .video-info
                    .title 今日精选
                    .name #{videoInfo.title}
                    .tag-list
                        each tag in videoInfo.formatTags
                            .tag #{tag}
                    .source
                        a(href="/new/person?id=#{videoInfo.userIdStr}" target="_blank")
                            img.icon(src='#{channelInfo.avatar}')
                        a(href="/new/person?id=#{videoInfo.userIdStr}" target="_blank")
                            .nick #{channelInfo.nick}
                        .time #{videoInfo.formatUploadTime}
                    .brief #{videoInfo.intro}
                .player
                    video(src="#{videoInfo.linkMp4}" autoplay=true loop=true)
                    .danmaku
                        .channel
                        .channel
                        .channel
                        .channel
                        .channel
                        .channel
                        .channel
                    .control
                        .progress
                            .pass
                        input(type="checkbox" id="play-checkbox" autocomplete="off")
                        label.play-btn(for="play-checkbox")
                        input(type="checkbox" id="muted-checkbox" autocomplete="off")
                        label.muted-btn(for="muted-checkbox")
                        .danmaku-btn

                .clear
            .card-box
                ul.menu
                    li.title(class="active",data-type='time') 按时间
                    li.title(data-type='heat') 按热度
            .game-video-list.video-card-list-wrap.time(data-interface='/bolo/api/web/video/zoneVideoList.htm',data-page-num='1',data-page-size='9',data-type='1',data-length='infinite',data-zone-id='#{zoneId}')
                include ../../components/video-card-list/1-0-x/index.jade
