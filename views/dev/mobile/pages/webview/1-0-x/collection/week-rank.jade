extends ./../../../../../layout
block head
    meta(name="keywords" content="网易菠萝 短视频 二次元 网络剧 真人短剧 在线直播 萌动漫 污视频 贱直播")
    meta(name="description" content="菠萝是网易旗下海量短视频平台 年轻人娱乐社区 热门IP短剧想看就看 更有著名IP创作团队与你即时直播互动 就差爱吐槽的你 赶快加入")
    title 人气周榜
    meta(content='width=device-width,initial-scale=1.0,maximum-scale=1.0,user-scalable=no',name='viewport')
    include ../../../../_include/base-m-dependencies
    link(rel='stylesheet', href='/dev/styles/mobile/pages/webview/1-0-x/collection/week-rank.css')
    - var originWidth = 1080
    include ../../../../_include/rem-helper
block content
    .wrapper
        ul.rank-list
            script(type='text/template', data-key='rank-list')
                <% data.forEach(function(d,i){ %>
                li.item(data-id!='<%=d.userIdStr%>',data-sid!='<%=d.sid%>')
                    .cover
                        img(src!='<%=(getImage(d.cover,[322,400]))%>')
                    .collection-info
                        .order
                            .num <%=(i + 1)%>
                            .text 人气值<%=(d.degree > 10000 ? (d.degree / 10000).toFixed(1) + '万' : d.degree)%>
                        .title <%-d.name%>
                        .updated-episodes 更新到<%=d.videoCount%>集
                        .author
                            .avatar
                                img(src!='<%=(getImage(d.avatar,[50,50]))%>')
                            .name <%-d.channelName%>
                <% }); %>
    script.
        require('/pages/mobile/webview/collection/1-0-x/rank');

    include ../../../../_include/cnzz-stat
