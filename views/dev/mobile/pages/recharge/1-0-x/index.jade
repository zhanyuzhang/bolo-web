    title 充值
    meta(content='width=device-width,initial-scale=1.0,maximum-scale=1.0,user-scalable=no',name='viewport')
    include ../../../_include/base-m-dependencies
    link(rel='stylesheet', href='/dev/styles/mobile/pages/recharge/1-0-x/index.css')
    - var originWidth = 1080
    include ../../../_include/rem-helper
block content
    .wrapper
        .balance-box
            .title 余额：
            .bolo-coin
            .number
                i 0
                .unit 菠萝币
            //.announcement 服务器升级中，暂停充值功能；由此给您造成不便，敬请谅解。
        .recharge-trade
            .title 充值金额
            ul.products-list
                script(type='text/template', data-key='products-list')
                    <% data.forEach(function(d){ %>
                    li.item(data-cashid!='<%-d.cash_id_str%>',data-cash!='<%-d.cash%>',data-productid!='<%-d.productid%>')
                        .wrap
                            .num <%-d.c_currency%>
                            .price ￥<%-d.cash%>
                    | &nbsp;
                    <% }); %>
            .total-price 售价：
                i 0
                | 元
        .pay-box
            script(type='text/template', data-key='pay-box')
                <% if(isIOS){ %>
                .ios-confirm-btn 确认充值
                <% }else{ %>
                h5 支付方式
                .pay-way.alipay(data-type='alipay')
                    .logo
                    .name 支付宝
                    .arrow
                .pay-way.wechat(data-type='wechat')
                    .logo
                    .name 微信
                    .arrow
                <% } %>
        //.fail-tip 若扣款成功但菠萝币未到账，请加入QQ群联系菠萝菌。
        //    br
        //    | 菠萝交流群：15487872
    .tip-dialog

    script.
        require('/pages/mobile/recharge@1-0-x');
    include ../../../_include/cnzz-stat
